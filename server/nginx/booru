    #    add_header 'Cache-Control' 'public, max-age=600';
    #}

    location ~ /discord/? {
        return 302 "https://discord.gg/kMm8XtHmpE";
    }

    #location ~ ^/posts/.*?([0-9]+\.[a-z0-9]+$) {
