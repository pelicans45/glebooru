.expander
    &.collapsed
        margin-bottom: 1em
        &>*
            display: none
        &>header
            display: block
    header
        background: var(--active-tab-background-color)
        line-height: 2em
        a
            padding: 0 0.5em
            display: block
            color: mix(var(--text-color), var(--inactive-link-color))
            span
                font-size: 120%
            i
                font-size: 1em
                color: var(--inactive-link-color)
                float: right
                line-height: 2em
    .expander-content
        padding: 0.5em 0.5em 2em 0.5em

.darktheme .expander
    header
        background: var(--active-tab-background-color-darktheme)
        a
            color: mix(var(--text-color-darktheme), var(--inactive-link-color-darktheme))
            i
                color: var(--inactive-link-color-darktheme)
